
@{
    Layout = "~/Views/Shared/IndexViewStart.cshtml";
}

@using TeaMVC.Models
@model List<Users>
<!DOCTYPE html>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>显示客户列表</title>
</head>
<body>
    <br />
    @*<h2 class="text-center">显示用户信息</h2>*@
    <div class="container">
        @using (Html.BeginForm())
        {
            <input type="text" placeholder="搜索用户姓名" name="name" /><input type="submit" value="搜索" />
            <input type="button" value="添加" class="btn btn-primary" onclick="location='/Users/AddUsers'" style="margin-left:800px"/>
        }
    </div>
    <br />
    <div class="container">
        <table class="table table-bordered" style="text-align:center">
            <tr style="background-color:darkturquoise">
                <td>昵称</td>
                <td>用户真实姓名</td>
                <td>用户生日</td>
                <td>用户类别</td>
                <td>收货人姓名</td>
                <td>收货电话</td>
                <td>收货地址</td>
                @*<td>操作</td>*@
            </tr>
            @foreach (Users item in Model)
            {
                <tr onclick="location.href='/Client/Index?id=@item.UNo'">
                    <td>@item.UName</td>
                    <td>@item.URealName</td>
                    <td>@item.Ubirthday</td>
                    <td>@item.UType</td>
                    <td>@item.ConsigneeName</td>
                    <td>@item.ConsigneePhone</td>
                    <td>@item.ConsigneeAddress</td>
                    @*<td>
                        <input id="Button1" type="button" class="btn btn-link" value="修改" onclick="location.href='/Users/Update?id='+@item.UId" />
                    </td>*@
                </tr>
            }
        </table>
    </div>
</body>
</html>
