@{
    Layout = null;
}


@using TeaMVC.Models
@model List<Users>
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>登录</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/csss/reset.css" rel="stylesheet" />
    <link href="~/csss/common.css" rel="stylesheet" />
    <link href="~/csss/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="wrap login_wrap">
        <div class="content">
            <div class="logo"></div>
            <div class="login_box">
                @using (Html.BeginForm())
                {
                    <div class="login_form">
                        <div class="login_title">
                            登录
                        </div>
                        <form action="Login" method="post">

                            <div class="form_text_ipt">
                                <input name="UNo" type="text" placeholder="用户编码">
                            </div>
                            <div class="ececk_warning"><span>用户编码不能为空</span></div>
                            <div class="form_text_ipt">
                                <input name="UPass" type="password" placeholder="密码">
                            </div>
                            <div class="ececk_warning"><span>密码不能为空</span></div>
                            <div class="form_check_ipt">
                                <div class="left check_left">
                                    <label><input name="" type="checkbox"> 下次自动登录</label>
                                </div>
                            </div>
                            <div class="form_btn">
                                <button type="submit" @*onclick="location.href = '/OrdersMoney/Index'"*@ class="btn btn-info">登录</button>
                            </div>
                            <div class="form_reg_btn">
                                <span>还没有帐号？</span><a href="/Users/Enroll">马上注册</a>
                            </div>
                        </form>
                    </div>
                }

            </div>
        </div>
    </div>
    <script src="~/jss/jquery.min.js"></script>
    <script src="~/jss/common.js"></script>
</body>
</html>
