
@{
    Layout = null;
}

@using TeaMVC.Models
@model List<Users>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>修改用户</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <h2 class="text-center">修改用户</h2>
    @using (Html.BeginForm())
    {
        <div class="container">
            <table class="table table-bordered">
                @foreach (Users item in Model)
                {
                    <tr>
                        <td style="width:200px">用户昵称</td>
                        <td><input type="text" name="UName" value="@item.UName" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px">用户真实姓名</td>
                        <td><input type="text" name="URealName" value="@item.URealName" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px">用户生日</td>
                        <td><input type="date" name="Ubirthday" value="@item.Ubirthday" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px">用户类别</td>
                        <td>
                            <select id="Select1" name="UType">
                                <option value="1">普通用户</option>
                                <option value="1">管理员</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px">收货姓名</td>
                        <td><input type="text" name="ConsigneeName" value="@item.ConsigneeName" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px">收货号码</td>
                        <td><input type="text" name="ConsigneePhone" value="@item.ConsigneePhone" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px">收货地址</td>
                        <td><input type="text" name="ConsigneeAddress" value="@item.ConsigneeAddress" /></td>
                    </tr>
                    <tr>
                        <td style="width:200px"></td>
                        <td><input type="submit" value="修改" class="btn btn-dark" /></td>
                    </tr>
                }
            </table>
        </div>
    }

</body>
</html>
