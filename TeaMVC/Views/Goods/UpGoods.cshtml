
@{
    ViewData["Title"] = "修改商品信息";
    Layout = "~/Views/Shared/IndexViewStart.cshtml";
}

@using (Html.BeginForm())
{
    <div>
        <table class="table table-responsive-lg">
            <tr>
                <td>商品图片:</td>
                <td><input type="text" name="GoodsPicture" value="" /></td>
            </tr>
            <tr>
                <td>商品名称:</td>
                <td><input type="text" name="GName" value="" /></td>
            </tr>
            <tr>
                <td>商品单价</td>
                <td><input type="text" name="GPrice" value="" /></td>
            </tr>
            <tr>
                <td>库存数量</td>
                <td><input type="text" name="GNum" value="" /></td>
            </tr>
            <tr>
                <td>商品备注</td>
                <td><input type="text" name="GRemark" value="" /></td>
            </tr>
            <tr>
                <td>商品状态</td>
                <td>
                    <select id="Select1" style="width:150px" name="GState">
                        <option>上架</option>
                        <option>下架</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input id="Submit1" type="submit" value="保存" class="btn btn-info" />
                    <input type="button" name="name" value="返回" class="btn btn-info" onclick="location.href='/Goods/ShowGoods'" />
                </td>
            </tr>
        </table>
    </div>
}